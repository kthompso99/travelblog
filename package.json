{
  "name": "travel-blog-builder",
  "version": "1.0.0",
  "description": "Build script for travel blog - geocodes locations and converts markdown offline",
  "main": "scripts/build/build.js",
  "scripts": {
    "validate": "node scripts/validate.js",
    "build": "node scripts/validate.js && node scripts/build/build.js",
    "build:smart": "node scripts/build/build-smart.js",
    "dev": "node scripts/build/build-smart.js && concurrently \"npm run watch\" \"node scripts/server.js 8000\"",
    "writing": "node scripts/build/build-smart.js && concurrently \"npm run watch:writing\" \"node scripts/server.js 8000\"",
    "watch": "nodemon --watch content/ --ext md,json --delay 1000ms --exec 'node scripts/build/build-smart.js'",
    "watch:writing": "nodemon --watch content/trips/ --ext md --exec 'node scripts/build/build-writing.js'",
    "serve": "node scripts/server.js 8000",
    "add": "node scripts/tools/add-trip.js",
    "sync-photos": "node scripts/tools/sync-takeout-photos.js",
    "assign-photos": "node scripts/tools/assign-photos.js",
    "test": "node scripts/test/test-nav.js && node scripts/test/test-filter.js && node scripts/test/test-css-injection.js && node scripts/test/test-maps.js",
    "deploy-check": "node scripts/deploy-check.js",
    "sync-docs": "node scripts/sync-docs.js",
    "optimize:images": "node scripts/tools/optimize-images.js",
    "optimize:images:dry-run": "node scripts/tools/optimize-images.js --dry-run",
    "optimize:images:force": "node scripts/tools/optimize-images.js --force"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "googleapis": "^171.4.0",
    "image-size": "^2.0.2",
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jsdom": "^28.0.0",
    "nodemon": "^3.0.1",
    "puppeteer": "^24.37.2",
    "serve-handler": "^6.1.6"
  },
  "keywords": [
    "travel",
    "blog",
    "static-site"
  ],
  "author": "",
  "license": "MIT"
}
